load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "go_default_library",
    srcs = [
        "const.go",
        "i18n.go",
        "resourceloader.go",
        "translations.go",
    ],
    importpath = "github.com/Azure/acs-engine/pkg/i18n",
    visibility = ["//visibility:public"],
    deps = ["//vendor/github.com/leonelquinteros/gotext:go_default_library"],
)

filegroup(
    name = "package-srcs",
    srcs = glob(["**"]),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [":package-srcs"],
    tags = ["automanaged"],
    visibility = ["//visibility:public"],
)
